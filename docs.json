{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "mode": "dark",
  "name": "Stackr API",
  "description": "Documentação da API Stackr - Hospede, gerencie e faça backup dos seus bots",
  "colors": {
    "primary": "#8b5cf6",
    "light": "#a78bfa",
    "dark": "#7c3aed"
  },
  "favicon": "/favicon.svg",
