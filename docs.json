            "pages": [
              "api-reference/bots/settings",
              "api-reference/bots/files-list",
              "api-reference/bots/files-read",
              "api-reference/bots/files-write",
              "api-reference/bots/files-rename",
              "api-reference/bots/files-mkdir",
              "api-reference/bots/files-delete"
