          {
            "group": "Planos e Pagamentos",
            "pages": [
              "api-reference/plans/current",
              "api-reference/plans/expiring",
              "api-reference/plans/purchase",
              "api-reference/plans/check",
              "api-reference/plans/upgrade",
              "api-reference/plans/purchases",
              "api-reference/plans/purchase-detail"
            ]
          }
